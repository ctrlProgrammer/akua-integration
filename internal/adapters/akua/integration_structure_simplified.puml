@startuml Integration Structure Simplified

title Akua Project - Integration Architecture (Simplified)

skinparam componentStyle rectangle
skinparam linetype ortho

package "Domain" <<Layer>> {
    [commerce] as CommerceDomain
    [organization] as OrgDomain
    [authorization] as AuthDomain
    [payment] as PaymentDomain
    [instruments] as InstrumentDomain
}

package "Adapters" <<Layer>> {
    [akua.Client] as Client
    [CommerceProvider] as CommerceAdapter
    [OrganizationProvider] as OrgAdapter
    [AuthorizationProvider] as AuthAdapter
    [PaymentsProvider] as PaymentAdapter
}

cloud "Akua API" {
    [REST API] as AkuaAPI
}

' Domain to Adapter connections
AuthDomain ..> AuthAdapter
CommerceDomain ..> CommerceAdapter
OrgDomain ..> OrgAdapter
PaymentDomain ..> PaymentAdapter
PaymentDomain ..> AuthAdapter
InstrumentDomain ..> AuthAdapter

' Adapter to Client connections
AuthAdapter --> Client
CommerceAdapter --> Client
OrgAdapter --> Client
PaymentAdapter --> Client

' Client to External API
Client --> AkuaAPI : HTTP\nJWT Auth

@enduml

